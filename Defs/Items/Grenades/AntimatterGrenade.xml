<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BaseMakeableGrenade">
        <defName>AntimatterGrenades</defName>
        <label>antimatter grenades</label>
        <description>Grenades that contain tiny amounts of antimatter that is allowed to come into contact with the environment, creating a large explosion of energy and radiation.</description>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/Grenades</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.3</uiIconScale>
        <soundInteract>Interact_Grenade</soundInteract>
        <techLevel>Spacer</techLevel>
        <statBases>
            <Mass>1.2</Mass>
            <RangedWeapon_Cooldown>2.66</RangedWeapon_Cooldown>
            <WorkToMake>12000</WorkToMake>
        </statBases>
        <costList>
            <Steel>30</Steel>
            <Plasteel>10</Plasteel>
            <AntimatterCanister>1</AntimatterCanister>
        </costList>
        <weaponTags>
            <li>GrenadeDestructive</li>
        </weaponTags>
        <thingCategories>
            <li>Grenades</li>
        </thingCategories>
        <verbs>
        <li>
            <label>throw antimatter grenade</label>
            <verbClass>Verb_LaunchProjectile</verbClass>
            <hasStandardCommand>true</hasStandardCommand>
            <range>14</range>
            <forcedMissRadius>1.4</forcedMissRadius>
            <warmupTime>2</warmupTime>
            <noiseRadius>6</noiseRadius>
            <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
            <soundCast>ThrowGrenade</soundCast>
            <targetParams>
                <canTargetLocations>true</canTargetLocations>
            </targetParams>
            <defaultProjectile>Proj_GrenadeAntimatter</defaultProjectile>
            <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
        </li>
        </verbs>
        <comps>
        <li Class="CompProperties_Explosive">
            <explosiveRadius>2.66</explosiveRadius>
            <explosiveDamageType>Bomb</explosiveDamageType>
            <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
        </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="BaseGrenadeProjectile">
        <defName>Proj_GrenadeAntimatter</defName>
        <label>antimatter grenade</label>
        <thingClass>Projectile_Explosive</thingClass>
        <graphicData>
            <texPath>Things/Projectile/Grenade</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <explosionRadius>2.5</explosionRadius>
            <damageDef>AnnihilationExplosion</damageDef>
            <!-- Use default damage from explosion def -->
            <explosionDelay>110</explosionDelay>
        </projectile>
    </ThingDef>

</Defs>